{% extends 'base.html.twig' %}

{% block title %}Mon compte - La Boutique Française
{% endblock %}

{% block content %}
    <h1>Mon compte</h1>
    {% if is_granted('ROLE_ADMIN') %}
        <small><a href="{{ path('admin') }}">Vous êtes un administrateur, accéder au backoffice</a><br></small>
    {% endif %}
    <p>Bienvenue {{ app.user.firstname }} {{ app.user.lastname }} dans votre compte <br/>
        C'est dans cet espace que vous allez pouvoir gérer toutes vos informations personnelles.</p>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/password.png') }}" alt="Modification du mot de passe"><br>
                <a href="{{ path('account_password') }}">Modifier mot de passe</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/address-book.png') }}" alt="Gestion des adresses"><br>
                <a href="{{ path('account_address') }}">Gérer mes adresses</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/trade.png') }}" alt="Voir mes commandes"><br>
                <a href="{{ path('account_order') }}">Mes commandes</a>
            </div>
        </div>
    </div>
    <hr/>
{% endblock %}
